<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/publicacion_layout"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:descendantFocusability="blocksDescendants" >

    <ImageView
        android:id="@+id/publicacion_image"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop" />

    <View
        android:layout_width="124dp"
        android:layout_height="124dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/tipo_publicacion_background"
        android:layout_marginLeft="10dp"
        android:id="@+id/tipo_publicacion_transparent"
        android:layout_marginTop="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/publicacion_background"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:layout_gravity="bottom" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/publicacion_icon_sexo"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/publicacion_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="18sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="Pepito"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/publicacion_icon_sexo"
            android:layout_toEndOf="@+id/publicacion_icon_sexo"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="06/10/2015"
            android:id="@+id/tv_fecha_publicacion"
            android:textSize="10dp"
            android:textColor="#ffffffff"
            android:layout_below="@+id/ivLocalizacion"
            android:layout_toRightOf="@+id/publicacion_icon_sexo"
            android:layout_toEndOf="@+id/publicacion_icon_sexo"
            android:layout_marginLeft="5dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/ivLocalizacion"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="70dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvLocalizacion"
            android:layout_marginLeft="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/ivLocalizacion"
            android:textColor="#ffffffff"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top|right" >

        <ImageView
            android:id="@+id/publicacion_icon_one"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/publicacion_icon_dos"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/publicacion_icon_tres"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="124dp"
        android:layout_height="124dp"
        android:text="EN ADOPCION"
        android:id="@+id/tv_tipo_publicacion"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_gravity="left|top"
        android:gravity="center_vertical|center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="123dp"
        android:layout_height="29dp"
        android:id="@+id/en_hogar_transito"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="10dp"
        android:gravity="center_horizontal"
        android:textSize="12dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp" />

</FrameLayout>