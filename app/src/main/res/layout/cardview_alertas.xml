<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="12dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alerta"
                android:textColor="#ffa9a9a9"
                android:id="@+id/titleAlerta"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/id_alerta_icon"
                android:layout_marginLeft="5dp" />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="false"
                android:layout_alignParentTop="false"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:id="@+id/id_alerta_icon"
                android:background="@drawable/ic_alerta" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10/12/1985"
                android:id="@+id/fecha_alerta"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textColor="#ffa9a9a9" />
        </RelativeLayout>
        <View style="@style/HorizontalDivider"/>

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:textStyle="bold"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:textColor="#ffa9a9a9"
            android:id="@+id/titleInfoBasica"
            android:textSize="16dp"
            android:text="@string/informacion_basica" />
        <TextView
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:id="@+id/infBasica"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="info"
            android:paddingStart="16dp"
            android:paddingBottom="8dp"
            android:textColor="#ffa9a9a9"
            android:textSize="14dp" />

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:textStyle="bold"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/informacion_adicional"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:textColor="#ffa9a9a9"
            android:id="@+id/titleInfoAdicional"
            android:textSize="16dp" />
        <TextView
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:id="@+id/infAdicional"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="adicional"
            android:paddingStart="16dp"
            android:paddingBottom="8dp"
            android:textColor="#ffa9a9a9"
            android:textSize="14dp" />


        <View style="@style/HorizontalDivider"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/btn_Delete"
                android:layout_marginTop="10dp"
                android:layout_gravity="right"
                android:background="@drawable/ic_delete"
                android:layout_alignParentEnd="true" />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/btn_Editar"
                android:layout_alignTop="@+id/btn_Delete"
                android:layout_toLeftOf="@+id/btn_Delete"
                android:layout_toStartOf="@+id/btn_Delete"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_editar" />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/btn_Buscar"
                android:layout_alignTop="@+id/btn_Editar"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/btn_Editar"
                android:background="@drawable/ic_buscar"
                android:focusable="false"
                android:longClickable="false" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>