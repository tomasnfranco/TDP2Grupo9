<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/portada_busqueda">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/nombre_mascota_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/nombre_mascota_hint"/>

            <Spinner
                android:id="@+id/especie_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/raza_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/sexo_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/tamanio_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/edad_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/color_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/compatible_con_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/papeles_dia_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/vacunas_dia_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/castrado_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/proteccion_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/energia_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/cargar_foto_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/cargar_fotos"/>
            
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
                <LinearLayout
                    android:id="@+id/fotos_horizontal_clickable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    
                    <ImageView
                        android:id="@+id/foto_uno"
                        android:layout_width="@dimen/foto_publicacion_size"
                        android:layout_height="@dimen/foto_publicacion_size"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:padding="0dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:background="@drawable/ic_add"/>

                    <ImageView
                        android:id="@+id/foto_dos"
                        android:layout_width="@dimen/foto_publicacion_size"
                        android:layout_height="@dimen/foto_publicacion_size"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:padding="0dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:background="@drawable/ic_add"/>

                    <ImageView
                        android:id="@+id/foto_tres"
                        android:layout_width="@dimen/foto_publicacion_size"
                        android:layout_height="@dimen/foto_publicacion_size"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:padding="0dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:background="@drawable/ic_add"/>

                    <ImageView
                        android:id="@+id/foto_cuatro"
                        android:layout_width="@dimen/foto_publicacion_size"
                        android:layout_height="@dimen/foto_publicacion_size"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:padding="0dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:background="@drawable/ic_add"/>

                    <ImageView
                        android:id="@+id/foto_cinco"
                        android:layout_width="@dimen/foto_publicacion_size"
                        android:layout_height="@dimen/foto_publicacion_size"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:padding="0dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:background="@drawable/ic_add"/>

                    <ImageView
                        android:id="@+id/foto_seis"
                        android:layout_width="@dimen/foto_publicacion_size"
                        android:layout_height="@dimen/foto_publicacion_size"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:padding="0dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:background="@drawable/ic_add"/>

                </LinearLayout>
            </HorizontalScrollView>

            <com.tdp2grupo9.view.clickable.EliminarUltimaFotoClickable
                android:id="@+id/eliminar_foto_clickeable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/icon_side"
                    android:layout_height="@dimen/icon_side"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/margin_right_icon"
                    android:src="@drawable/ic_videocamera"/>

                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/cargar_video"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:hint="@string/cargar_video"/>

            </LinearLayout>

            <com.tdp2grupo9.view.clickable.MapaClickable
                android:id="@+id/mapa_clickable"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.tdp2grupo9.view.checkable.HogarTransitoCheckable
                android:id="@+id/requiere_hogar_transito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"/>

            <com.tdp2grupo9.view.checkable.CuidadosEspecialesCheckable
                android:id="@+id/requiere_cuidados_especiales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"/>

            <EditText
                android:id="@+id/contacto_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/contacto_hint"/>

            <EditText
                android:id="@+id/condiciones_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/observaciones_hint"/>

            <Button
                android:id="@+id/btn_publicar_adopcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/guardar_publicacion"
                android:textColor="@color/white"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>