<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="12dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:focusable="false"
        android:backgroundTint="#ff000000"
        android:backgroundTintMode="src_in"
        android:baselineAligned="false"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consultas"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:textColor="#ffa9a9a9" />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="false"
                android:layout_alignParentStart="false"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_icono" />
        </RelativeLayout>
        <View style="@style/HorizontalDivider"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <ImageButton
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:id="@+id/btn_enviar_consulta"
                android:layout_gravity="right"
                android:layout_alignParentEnd="true"
                android:background="@drawable/ic_enviar_consulta" />

            <EditText
                android:layout_width="245dp"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/consulta_para_enviar"
                android:textColor="#96868686"
                android:textColorHint="#96868686"
                android:textSize="14sp"
                android:maxLength="255"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/btn_responder" />

        </RelativeLayout>

        <ListView
            android:id="@+id/listView_consultas"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#fff"
            android:scrollbars="vertical"
            android:padding="10dp"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>