<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="12dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:focusable="false"
        android:backgroundTint="#ff000000"
        android:backgroundTintMode="src_in"
        android:baselineAligned="false"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zona de residencia"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:textColor="#9E9E9E"
                android:textSize="18dp"
                android:textStyle="italic" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="false"
                android:layout_alignParentStart="false"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:background="@drawable/ic_icono" />

        </RelativeLayout>

        <View style="@style/HorizontalDivider"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="139dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/iv_localizacion_mascota"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="true"
                android:layout_margin="25dp"
                android:src="@drawable/button_localizacion" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/visualizar_posicion"
                android:id="@+id/tv_direccion_mascota"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/iv_localizacion_mascota" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleccione otra zona"
                android:id="@+id/textView5"
                android:layout_alignParentTop="false"
                android:layout_below="@+id/iv_localizacion_mascota"
                android:layout_marginTop="-20dp"
                android:layout_alignParentBottom="true"
                android:textSize="12dp"
                android:gravity="center"
                android:layout_alignLeft="@+id/iv_localizacion_mascota"
                android:layout_alignStart="@+id/iv_localizacion_mascota"
                android:layout_alignRight="@+id/iv_localizacion_mascota"
                android:layout_alignEnd="@+id/iv_localizacion_mascota" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="10dp"></RelativeLayout>

        <View style="@style/HorizontalDivider"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="10dp"></RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:id="@+id/panel_maxima_distancia">

            <Spinner
                android:id="@+id/maxima_distancia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingTop="5dp"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="false" />

        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>